<Window x:Class="WamlDemos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="525">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Select Publish Settings File" Grid.Column="0" Grid.Row="0"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Select" x:Name="_selectPubSettings" 
                Click="_selectPubSettings_Click"/>
        
        <TextBlock Text="Subscriptions:" Grid.Column="0" Grid.Row="1"/>
        <ListBox x:Name="_subscriptions" Grid.Column="0" Grid.Row="2" SelectionChanged="_subscriptions_SelectionChanged"/>

        <TextBlock Text="Regions:" Grid.Column="1" Grid.Row="1"/>
        <ListBox x:Name="_regions" Grid.Column="1" Grid.Row="2"/>

        <TextBlock Text="Trace:" Grid.Column="0" Grid.Row="3"/>
        <TextBox x:Name="_trace" TextWrapping="Wrap" AcceptsReturn="True" Grid.Column="0" 
                 Grid.Row="4" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
